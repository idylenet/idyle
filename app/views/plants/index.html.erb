<% title "Listing plants" %>

<table>
  <tr>
    <th>Common name</th>
    <th>Bot name</th>
    <th>Desc</th>
    <th>Spacing</th>
    <th>Sowing depth</th>
    <th>Yield worth</th>
  </tr>

<% @plants.each do |plant| %>
  <tr>
    <td><%=h plant.common_name %></td>
    <td><%=h plant.bot_name %></td>
    <td><%=h plant.desc %></td>
    <td><%=h plant.spacing %></td>
    <td><%=h plant.sowing_depth %></td>
    <td><%=h plant.yield_worth %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New plant', new_plant_path %>