			<div id="header">
				<%= 
					render :partial => 'page/main_navigation' 
				%>
			</div>
			<div id="sidebar">
				<ul>
					<li><a href="#">Hello There</a></li>
				</ul>
				<%= yield :subnav %>
			</div>
			<div  id="content">
				<%= yield %>
			</div>
			<br class="brhack">
			<div id="footer">
				<p class="pad nomargin">Idyle Copystraight 2008 <a href="/tyler">Tyler Tompkins</a></p>
			</div>
		</div>
	</body>
</html>
